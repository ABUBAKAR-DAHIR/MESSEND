<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Messend" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary color-->
        <item name="colorPrimary">@color/myPrimary</item>
        <item name="colorPrimaryVariant">@color/myPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors-->
        <item name="colorSecondary">@color/mySecondary</item>
        <item name="colorSecondaryVariant">@color/mySecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- window Background color -->
        <item name="android:windowBackground">@color/offWhite</item>

    </style>

    <style name="Theme.Messend" parent="Base.Theme.Messend" />
</resources>