<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPhoneNumber"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="100"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="20">

        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="@color/myPrimary"
            android:background="@drawable/circular_background"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="19sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="@color/lightGray"
            android:background="@drawable/circular_background"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="19sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="@color/lightGray"
            android:background="@drawable/circular_background"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="19sp"/>

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mobile_screen_solid"
        app:backgroundTint="@color/myPrimary"
        android:layout_weight="20"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Mobile Number"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="5">


        <com.hbb20.CountryCodePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false"
            android:id="@+id/login_countryCode"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="10dp"
            android:background="@drawable/edit_text_rounded"
            android:elevation="5dp"
            android:id="@+id/login_mobileNumber"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="20">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND OTP"
            android:textSize="19sp"
            android:background="@drawable/btn_rounded_corner"
            android:id="@+id/sendOTPBtn"/>

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/myPrimary"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            android:id="@+id/login_progressBar" />

    </LinearLayout>







</LinearLayout>